@inherits LayoutComponentBase

<RadzenComponents @rendermode="InteractiveAuto" />
<RadzenLayout>
    <RadzenHeader>
        <RadzenMenu>
            <RadzenMenuItem Text="Pythia" Path="" Icon="home" />
            <RadzenMenuItem Text="Corpus">
                <RadzenMenuItem Text="Index" Icon="list" />
                <RadzenMenuItem Text="Search" Path="search" Icon="search" />
            </RadzenMenuItem>
        </RadzenMenu>

    </RadzenHeader>
    <RadzenBody>
        <RadzenStack>
        </RadzenStack>
        <article class="content px-4">
            @Body
        </article>
        <div id="blazor-error-ui">
            An unhandled error has occurred.
            <a href="" class="reload">Reload</a>
            <a class="dismiss">🗙</a>
        </div>
    </RadzenBody>
    <RadzenFooter>
        <div class="text-center">
            &copy; 2021 - Pythia
        </div>
    </RadzenFooter>
</RadzenLayout>

